
<view class="container">
  <view class="asset">
    <view class='item' bindtap='kAsset'>
      <view>{{balance}}</view>
      <view>余额扣除</view>
    </view>
    <view class='item right' bindtap='goScore'>
      <view>{{score}}</view>
      <view>剩余积分</view>
    </view>
  </view>

   <view style="height:10rpx;background: #eee;width:100%;"></view>
    <view class="status-box">
        <view bindtap="statusTap" class="status-label {{statusValue[index] == currentType ? 'active' : ''}}" wx:for-items="{{statusType}}" wx:key="{{index}}" data-index="{{statusValue[index]}}">
            {{item}} <view class="{{tabClass[statusValue[index]]}}"></view>
        </view>
    </view>
    <view class="no-order" hidden="{{orderList ? true : false}}">
        <image src="/images/no-order.png" class="no-order-img"></image>
        <view class="text">暂无订单</view>
    </view>
    <view class="order-list" hidden="{{orderList ? false : true}}">
        <view class="a-order" wx:for-items="{{orderList}}" wx:key="{{index}}">
            <view class="order-date">
                <view class="date-box">下单时间：{{item.dateAdd}}</view>
                <!-- <view class="status {{(item.status==-1 || item.status==4) ? '':'red'}}">{{item.statusStr}}</view> -->
            </view>
            <view class="goods-info" bindtap="orderDetail" data-id="{{item.id}}">
                <view class="goods-des">
                   <view>订单号:{{item.orderNumber}} </view>
                   <view wx:if="{{item.remark && item.remark != ''}}">备注： {{item.remark}}</view>
                </view>
            </view>
            <view >
                <view class="goods-img-container" >
                    <view class="img-box">
                        <image src="{{usersMap[item.uid].avatarUrl}}" class="goods-img"></image>
                        
                    </view>
                    <view style='display: flex;flex-direction:column;font-size:28rpx;margin-left:40rpx;'>
                        <label >微信名：{{usersMap[item.uid].nick}}</label>
                  
                        <label>手机号：{{usersMap[item.uid].mobile}}</label>
                    </view>
                </view>
            </view>
            <view class="price-box">
                <view class="total-price" wx:if="{{item.score <= 0}}">合计：¥ {{item.amountReal}}</view>
                <view class="total-price" wx:if="{{item.score > 0}}">合计：¥ {{item.amountReal}} + {{item.score}} 积分</view>
                <view class="btn cancel-btn" hidden="{{item.status==0? false : true}}" bindtap="cancelOrderTap"  data-id="{{item.id}}">取消订单</view>
                <view class="btn topay-btn" hidden="{{item.isCanHx && item.status==1? false : true}}" bindtap="hxOrderTap"  data-hxnumber="{{item.hxNumber}}">核销订单</view>     
            </view>  
        </view>

    </view>
</view>