<!-- 余额扣除pages/k-asset/index.wxml-->
<view class="container">
    <form bindsubmit="deductFAsset" report-submit="true">
    <view class="form-box">
        <view class="row-wrap">
            <view class="label">扣除金额</view>
            <view class="label-right">
                <input name="amount" class="input" type="digit" placeholder="将从会员账户中扣除"/>      
            </view>
           
        </view>
         <view class="row-wrap">
              <view class="label">会员手机号</view>
              <view class="label-right">
                  <input name="phone" class="input" type="text" placeholder="会员一定要绑定给手机号"/>
                  
              </view>
          </view>
           <view class="row-wrap">
              <view class="label">备注</view>
              <view class="label-right">
                  <input name="remark" class="input" type="text" placeholder="备注信息"/>
              </view>
            </view>
    </view>
  
    <button type="warn" class="save-btn" formType="submit">立即扣除</button>
    </form>
    
</view>
